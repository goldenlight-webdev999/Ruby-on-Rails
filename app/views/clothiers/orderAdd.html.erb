    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Give <%= @clothier.first %> <%= @clothier.last %> Credit for an Order.</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
<div class="row">
              <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-plus fa-fw"></i> Note that adding <%= @clothier.first %> will remove any prior Clothiers from the order.
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                       <%= form_tag({:controller => "clothiers", :action => "orderAdd"}, :method => "post") %>
                        <fieldset>
                            <div class="form-group">
                                <%= text_field(:order, :number, :class => "form-control", :placeholder => "Order Number", :autofocus => true ) %>
                            </div>
                            
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Assign to <%= @clothier.first %></button>
                        </fieldset>
                    </form>
                    <% if @message != "" and @message != nil %><p style="text-align:center;padding:15px"><%= @message %></p><% end %>
                </div>
                <!-- /.panel-body -->
            </div>
          </div>
</div>
