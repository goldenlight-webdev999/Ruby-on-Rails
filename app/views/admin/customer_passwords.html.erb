<div id="vue">
<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reset Customer Password By ID</h1>
        </div>
        <!-- /.col-lg-12 -->
</div>
<div class="row">
          <div class="col-lg-4">
                 <div class="panel-body">
                <div style="font-size:20px;font-weight:bold;"><%= @message %></div>
                <!-- /.panel-heading -->
                <form method="POST" action="/admin/customer_passwords">
                <div class="form-group">
                    <input name="customer_id" class="form-control" placeholder="Customer ID (from Shopify)" required />
                </div>
                <div class="form-group">
                    <input name="password" class="form-control" placeholder="New Password" required />
                </div>
                <div class="form-group">
                    <input name="confirm" class="form-control" placeholder="Confirm Password" required />
                </div>                
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Reset Password</button>
                    
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    </form>
                </div>
                <!-- /.panel-body -->

          </div>
</div>
</div>
